_configure() {
	ln -s gthr-posix.h libgcc/gthr-default.h

	mkdir -v build
	cd build

	../libstdc++-v3/configure		\
		CXXFLAGS="-g -O2 -D_GNU_SOURCE"	\
		--prefix=/usr			\
		--disable-multilib		\
		--disable-nls			\
		--disable-libstdcxx-pch
}

_build() {
	make -j${THREADS}
}

_install() {
	make install
}
