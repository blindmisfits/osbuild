_configure() {
	./configure			\
		--prefix=/usr		\
		--bindir=/sbin		\
		--sbindir=/sbin		\
		--libdir=/usr/lib	\
		--sysconfdir=/etc	\
		--libexecdir=/lib	\
		--with-rootprefix=	\
		--with-rootlibdir=/lib	\
		--enable-manpages	\
		--disable-static
}

_build() {
	make -j${THREADS}

	mkdir -pv /lib/udev/rules.d
	mkdir -pv /etc/udev/rules.d
}

_install() {
	make install
}
