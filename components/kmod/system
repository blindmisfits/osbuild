_configure() {
	./configure			\
		--prefix=/usr		\
		--bindir=/bin		\
		--sysconfdir=/etc	\
		--with-rootlibdir=/lib	\
		--with-xz		\
		--with-zlib
}

_build() {
	make -j${THREADS}
}

_install() {
	make install

	for target in depmod insmod lsmod modinfo modprobe rmmod; do
	  ln -sfv ../bin/kmod /sbin/$target
	done

	ln -sfv kmod /bin/lsmod
}
