_configure() {
	./configure			\
		--prefix=/usr		\
		--bindir=/bin		\
		--disable-static	\
		--sysconfdir=/etc	\
		--docdir=/usr/share/doc/attr-$version
}

_build() {
	make -j${THREADS}
}

_install() {
	make install

	mv -v /usr/lib/libattr.so.* /lib
	ln -sfv ../../lib/$(readlink /usr/lib/libattr.so) /usr/lib/libattr.so
}
