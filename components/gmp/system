_configure() {
	cp -v configfsf.guess config.guess
	cp -v configfsf.sub   config.sub

	./configure			\
		--prefix=/usr		\
		--enable-cxx		\
		--disable-static	\
		--docdir=/usr/share/doc/gmp-$version
}

_build() {
	make -j${THREADS}
	make -j${THREADS} html
}

_install() {
	make install
	make install-html
}
