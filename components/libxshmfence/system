_configure() {
	configcmd 	 	 	\
                --prefix=/usr           \
                --sysconfdir=/etc 	\
                --localstatedir=/var    \
                --disable-static        \
                --docdir=/usr/share/doc/libxshmfence-${version}
}

_build() {
	make -j${THREADS}
}

_install() {
	make install
}
