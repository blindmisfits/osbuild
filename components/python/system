_configure() {
	./configure			\
		--prefix=/usr		\
		--enable-shared		\
		--with-system-expat	\
		--with-system-ffi	\
		--with-ensurepip=yes
}

_build() {
	make -j${THREADS}
}

_install() {
	sed -i -e 's/j0/j1/g' Makefile
	sed -i -e 's/j0/j1/g' Makefile.pre
	sed -i -e 's/j0/j1/g' Makefile.pre.in

	make install

	# FIXME - hard-coded version
	chmod -v 755 /usr/lib/libpython3.8.so
	chmod -v 755 /usr/lib/libpython3.so
	ln -sfv pip3.8 /usr/bin/pip3
}
